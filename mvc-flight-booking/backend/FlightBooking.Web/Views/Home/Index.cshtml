            // Set max date to 3 months from now
            const maxDate = new Date();
            maxDate.setMonth(maxDate.getMonth() + 3);
            dateInput.max = maxDate.toISOString().split('T')[0];
            
            // Prevent same city selection and update options
            function updateCityOptions() {
                const departureValue = departureSelect.value;
                const arrivalValue = arrivalSelect.value;
                
                // Reset all options to enabled
                Array.from(departureSelect.options).forEach(option => {
                    option.disabled = false;
                    option.style.color = '';
                });
                Array.from(arrivalSelect.options).forEach(option => {
                    option.disabled = false;
                    option.style.color = '';
                });
                
                // Disable selected city in the other dropdown
                if (departureValue) {
                    Array.from(arrivalSelect.options).forEach(option => {
                        if (option.value === departureValue) {
                            option.disabled = true;
                            option.style.color = '#ccc';
                        }
                    });
                }
                
                if (arrivalValue) {
                    Array.from(departureSelect.options).forEach(option => {
                        if (option.value === arrivalValue) {
                            option.disabled = true;
                            option.style.color = '#ccc';
                        }
                    });
                }
                
                // If same city is selected, clear the second one
                if (departureValue && arrivalValue && departureValue === arrivalValue) {
                    arrivalSelect.value = '';
                    alert('âš ï¸ KalkÄ±ÅŸ ve varÄ±ÅŸ ÅŸehri aynÄ± olamaz!');
                }
            }
            
            departureSelect.addEventListener('change', updateCityOptions);
            arrivalSelect.addEventListener('change', updateCityOptions);
            
            // Form submission validation
            form.addEventListener('submit', function(e) {
                if (!departureSelect.value) {
                    e.preventDefault();
                    alert('âš ï¸ LÃ¼tfen kalkÄ±ÅŸ ÅŸehrini seÃ§in');
                    departureSelect.focus();
                    return;
                }
                
                if (!arrivalSelect.value) {
                    e.preventDefault();
                    alert('âš ï¸ LÃ¼tfen varÄ±ÅŸ ÅŸehrini seÃ§in');
                    arrivalSelect.focus();
                    return;
                }
                
                if (!dateInput.value) {
                    e.preventDefault();
                    alert('âš ï¸ LÃ¼tfen tarih seÃ§in');
                    dateInput.focus();
                    return;
                }
                
                if (departureSelect.value === arrivalSelect.value) {
                    e.preventDefault();
                    alert('âš ï¸ KalkÄ±ÅŸ ve varÄ±ÅŸ ÅŸehri aynÄ± olamaz!');
                    return;
