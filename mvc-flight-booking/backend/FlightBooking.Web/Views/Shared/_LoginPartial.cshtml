@using System.Security.Claims

@if (User.Identity?.IsAuthenticated == true)
{
    <ul class="navbar-nav">
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-warning" asp-controller="Admin" asp-action="Index">
                    <i class="fas fa-cog me-1"></i>Admin Panel
                </a>
            </li>
        }
        
        @if (User.FindFirst("IsGuest")?.Value != "true")
        {
            <li class="nav-item">
                <a class="nav-link" asp-controller="Bookings" asp-action="Index">
                    <i class="fas fa-list me-1"></i>Rezervasyonlarım
                </a>
            </li>
        }
        
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                <i class="fas fa-user me-1"></i>
                @if (User.FindFirst("IsGuest")?.Value == "true")
                {
                    <span>Misafir</span>
                }
                else
                {
                    <span>@User.FindFirst(ClaimTypes.Name)?.Value</span>
                }
            </a>
            <ul class="dropdown-menu">
                @if (User.FindFirst("IsGuest")?.Value != "true")
                {
                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Profile">
                        <i class="fas fa-user-edit me-2"></i>Profil
                    </a></li>
                    <li><hr class="dropdown-divider"></li>
                }
                <li>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="dropdown-item">
                            <i class="fas fa-sign-out-alt me-2"></i>Çıkış Yap
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Auth" asp-action="Login">
                <i class="fas fa-sign-in-alt me-1"></i>Giriş Yap
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Auth" asp-action="Register">
                <i class="fas fa-user-plus me-1"></i>Kayıt Ol
            </a>
        </li>
    </ul>
}