@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const pnrInput = document.getElementById('pnr');
            const form = document.getElementById('pnrQueryForm');
            
            // Auto-format PNR input
            pnrInput.addEventListener('input', function(e) {
                let value = e.target.value.toUpperCase().replace(/[^A-Z0-9]/g, '');
                if (value.length > 6) {
                    value = value.substring(0, 6);
                }
                e.target.value = value;
            });
            
            // Form validation
            form.addEventListener('submit', function(e) {
                const pnr = pnrInput.value.trim();
                const email = document.getElementById('email').value.trim();
                
                if (pnr.length !== 6) {
                    e.preventDefault();
                    alert('âš ï¸ PNR numarasÄ± 6 hane olmalÄ±dÄ±r!');
                    pnrInput.focus();
                    return false;
                }
                
                if (!email || email.indexOf('@@') === -1) {
                    e.preventDefault();
                    alert('âš ï¸ GeÃ§erli bir e-posta adresi girin!');
                    document.getElementById('email').focus();
                    return false;
                }
                
                // Show loading state
                const submitBtn = form.querySelector('button[type="submit"]');
                submitBtn.disabled = true;
                submitBtn.textContent = 'SorgulanÄ±yor...';
                
                // Re-enable after 5 seconds as fallback
                setTimeout(() => {
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'ğŸ” Sorgula';
                }, 5000);
            });
            
