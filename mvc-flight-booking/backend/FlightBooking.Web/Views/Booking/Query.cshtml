@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get URL parameters for pre-filling
            const urlParams = new URLSearchParams(window.location.search);
            const pnr = urlParams.get('pnr');
            const email = urlParams.get('email');
            
            if (pnr) {
                document.getElementById('pnr').value = pnr.toUpperCase();
            }
            
            if (email) {
                document.getElementById('email').value = decodeURIComponent(email);
            }
            
            // PNR input formatting
            const pnrInput = document.getElementById('pnr');
            if (pnrInput) {
                pnrInput.addEventListener('input', function(e) {
                    let value = e.target.value.toUpperCase().replace(/[^A-Z0-9]/g, '');
                    if (value.length > 6) {
                        value = value.substring(0, 6);
                    }
                    e.target.value = value;
                });
                pnrInput.focus();
            }
            
            // TC kimlik numarasÄ± formatting
            const identityInput = document.getElementById('identityNumberOnly');
            if (identityInput) {
                identityInput.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/[^0-9]/g, '');
                    if (value.length > 11) {
                        value = value.substring(0, 11);
                    }
                    e.target.value = value;
                });
            }
        });
    </script>
